---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern website built with Astro and React" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-secondary">
    <slot />
  </body>
</html> 