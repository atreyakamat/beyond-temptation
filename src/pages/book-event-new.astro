---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.jsx';
---

<MainLayout title="Events - Beyond Temptation Café">
  <Navbar client:load />
  
  <div class="relative flex size-full min-h-screen flex-col bg-white">
    <div class="layout-container flex h-full grow flex-col">
      <div class="px-4 md:px-40 flex flex-1 justify-center py-5 pt-20">
        <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
          
          <!-- Page Header -->
          <div class="flex flex-wrap justify-between gap-3 p-4">
            <p class="text-primary tracking-light text-[32px] font-bold leading-tight min-w-72">Events</p>
          </div>

          <!-- Host Your Gathering Section -->
          <h2 class="text-primary text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Host Your Gathering</h2>
          <p class="text-primary text-base font-normal leading-normal pb-3 pt-1 px-4">
            Looking for a unique space to host your next event? Beyond Temptation Cafe offers a warm and inviting atmosphere perfect for gatherings of all kinds. Whether it's a
            birthday celebration, a corporate meeting, or a casual get-together, our team is dedicated to making your event memorable. Request to book a spot today and let us
            help you create an unforgettable experience.
          </p>

          <!-- Booking Form -->
          <form id="booking-form">
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
              <label class="flex flex-col min-w-40 flex-1">
                <p class="text-primary text-base font-medium leading-normal pb-2">Name</p>
                <input
                  id="name"
                  name="name"
                  placeholder="Your Name"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-primary focus:outline-0 focus:ring-0 border border-[#e4e0dd] bg-white focus:border-[#e4e0dd] h-14 placeholder:text-accent-dark p-[15px] text-base font-normal leading-normal"
                  required
                />
              </label>
            </div>
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
              <label class="flex flex-col min-w-40 flex-1">
                <p class="text-primary text-base font-medium leading-normal pb-2">Email</p>
                <input
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Your Email"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-primary focus:outline-0 focus:ring-0 border border-[#e4e0dd] bg-white focus:border-[#e4e0dd] h-14 placeholder:text-accent-dark p-[15px] text-base font-normal leading-normal"
                  required
                />
              </label>
            </div>
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
              <label class="flex flex-col min-w-40 flex-1">
                <p class="text-primary text-base font-medium leading-normal pb-2">Event Type</p>
                <input
                  id="eventType"
                  name="eventType"
                  placeholder="Type of Event"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-primary focus:outline-0 focus:ring-0 border border-[#e4e0dd] bg-white focus:border-[#e4e0dd] h-14 placeholder:text-accent-dark p-[15px] text-base font-normal leading-normal"
                  required
                />
              </label>
            </div>
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
              <label class="flex flex-col min-w-40 flex-1">
                <p class="text-primary text-base font-medium leading-normal pb-2">Message</p>
                <textarea
                  id="message"
                  name="message"
                  placeholder="Your Message"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-primary focus:outline-0 focus:ring-0 border border-[#e4e0dd] bg-white focus:border-[#e4e0dd] min-h-36 placeholder:text-accent-dark p-[15px] text-base font-normal leading-normal"
                  required
                ></textarea>
              </label>
            </div>
            <div class="flex px-4 py-3 justify-start">
              <button
                type="submit"
                class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-10 px-4 bg-accent text-primary text-sm font-bold leading-normal tracking-[0.015em] hover:bg-accent/90 transition-colors"
              >
                <span class="truncate">Request to Book a Spot</span>
              </button>
            </div>
          </form>

          <!-- Upcoming Events -->
          <h2 class="text-primary text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Upcoming Events</h2>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4">
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Live Music Night</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Join us for an evening of live music and delicious treats.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1541167760496-1628856ab772?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Coffee Tasting Workshop</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Explore the world of coffee with our expert-led tasting workshop.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1516450360452-9312f5e86fc7?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Open Mic Night</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Showcase your talent or enjoy the performances of others at our open mic night.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1541961017774-22349e4a1262?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Art Exhibition</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Discover local artists and their work at our monthly art exhibition.</p>
              </div>
            </div>
          </div>

          <!-- Past Events -->
          <h2 class="text-primary text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Past Events</h2>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(158px,1fr))] gap-3 p-4">
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Book Club Meeting</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Discuss your favorite books and meet fellow book lovers.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1606092195730-5d7b9af1efc5?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Board Game Night</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Enjoy a night of fun and games with friends and family.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1578662996442-48f60103fc96?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Charity Bake Sale</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Support a good cause with our annual charity bake sale.</p>
              </div>
            </div>
            <div class="flex flex-col gap-3 pb-3">
              <div
                class="w-full bg-center bg-no-repeat aspect-square bg-cover rounded-xl"
                style='background-image: url("https://images.unsplash.com/photo-1571115764595-644a1f56a55c?auto=format&fit=crop&w=400&q=80");'
              ></div>
              <div>
                <p class="text-primary text-base font-medium leading-normal">Holiday Party</p>
                <p class="text-accent-dark text-sm font-normal leading-normal">Celebrate the holidays with our festive party.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <footer class="flex justify-center">
        <div class="flex max-w-[960px] flex-1 flex-col">
          <footer class="flex flex-col gap-6 px-5 py-10 text-center @container">
            <div class="flex flex-wrap items-center justify-center gap-6 @[480px]:flex-row @[480px]:justify-around">
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/">Home</a>
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/menu">Menu</a>
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/gallery">Gallery</a>
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/book-event">Events</a>
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/location">Visit</a>
              <a class="text-accent-dark text-base font-normal leading-normal min-w-40 hover:text-primary transition-colors" href="/contact">Contact</a>
            </div>
            <p class="text-accent-dark text-base font-normal leading-normal">© 2025 Beyond Temptation Café. All rights reserved.</p>
          </footer>
        </div>
      </footer>
    </div>
  </div>

  <!-- Floating WhatsApp -->
  <a href="https://wa.me/919876543210" 
     class="fixed bottom-6 right-6 bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition-all duration-300 hover:scale-110 z-50"
     target="_blank">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
      <path d="M187.58,144.84l-32-16a8,8,0,0,0-8,.5l-14.69,9.8a40.55,40.55,0,0,1-16-16l9.8-14.69a8,8,0,0,0,.5-8l-16-32A8,8,0,0,0,104,64a40,40,0,0,0-40,40,88.1,88.1,0,0,0,88,88,40,40,0,0,0,40-40A8,8,0,0,0,187.58,144.84ZM152,176a72.08,72.08,0,0,1-72-72A24,24,0,0,1,99.29,80.46l11.48,23L101,118a8,8,0,0,0-.73,7.51,56.47,56.47,0,0,0,30.15,30.15A8,8,0,0,0,138,155l14.61-9.74,23,11.48A24,24,0,0,1,152,176ZM128,24A104,104,0,0,0,36.18,176.88L24.83,210.93a16,16,0,0,0,20.24,20.24l34.05-11.35A104,104,0,1,0,128,24Zm0,192a87.87,87.87,0,0,1-44.06-11.81,8,8,0,0,0-6.54-.67L40,216,52.47,178.6a8,8,0,0,0-.66-6.54A88,88,0,1,1,128,216Z"></path>
    </svg>
  </a>
</MainLayout>

<script>
  // Add Google Fonts
  const link = document.createElement('link');
  link.rel = 'preconnect';
  link.href = 'https://fonts.gstatic.com';
  link.crossOrigin = 'anonymous';
  document.head.appendChild(link);

  const fontLink = document.createElement('link');
  fontLink.rel = 'stylesheet';
  fontLink.href = 'https://fonts.googleapis.com/css2?display=swap&family=Noto+Sans:wght@400;500;700;900&family=Plus+Jakarta+Sans:wght@400;500;700;800';
  document.head.appendChild(fontLink);

  // Form submission handler
  document.getElementById('booking-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const name = formData.get('name');
    const email = formData.get('email');
    const eventType = formData.get('eventType');
    const message = formData.get('message');
    
    // Create WhatsApp message
    const whatsappMessage = `Hi! I'd like to book a spot at Beyond Temptation Café.
    
Name: ${name}
Email: ${email}
Event Type: ${eventType}
Message: ${message}

Please let me know about availability and next steps. Thank you!`;
    
    // Open WhatsApp with the message
    const encodedMessage = encodeURIComponent(whatsappMessage);
    const whatsappURL = `https://wa.me/919876543210?text=${encodedMessage}`;
    window.open(whatsappURL, '_blank');
    
    // Optional: Show confirmation message
    alert('Your booking request has been sent via WhatsApp. We\'ll get back to you soon!');
    
    // Reset form
    this.reset();
  });
</script>
