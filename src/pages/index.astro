---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.jsx';
import FeaturedDish from '../components/FeaturedDish.jsx';
import { SparklesCore } from '../components/ui/sparkles';
---

<MainLayout title="Beyond Temptation Cafe">
  <Navbar client:load />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-secondary relative h-screen flex items-center">
      <div class="absolute inset-0 z-0">
        <img 
          src="https://images.unsplash.com/photo-1554118811-1e0d58224f24" 
          alt="Hero Background" 
          class="w-full h-full object-cover opacity-50"
        />
        <SparklesCore
          client:load
          id="tsparticles"
          background="transparent"
          minSize={0.6}
          maxSize={1.4}
          particleColor="#FFD700"
          className="absolute inset-0 z-10"
          particleDensity={100}
        />
      </div>
      <div class="relative z-20 py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-primary md:text-5xl lg:text-6xl font-serif">
          Beyond Temptation
        </h1>
        <p class="mb-8 text-lg font-normal text-yellow-light lg:text-xl">
          Where Every Moment Becomes a Celebration
        </p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
          <a href="/menu" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-secondary bg-primary hover:bg-yellow-dark rounded-lg transition-colors duration-300">
            View Menu
          </a>
          <a href="#book-event" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-primary border-2 border-primary hover:bg-primary hover:text-secondary rounded-lg transition-colors duration-300">
            Book Event
          </a>
        </div>
      </div>
    </section>

    <!-- Special Offer -->
    <section class="py-16 px-4 bg-primary">
      <div class="max-w-screen-xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-secondary mb-6 font-serif">Host Your Special Day</h2>
        <p class="text-secondary text-xl mb-8">
          Make your celebration memorable with us!
          <br />Special packages available for birthdays, anniversaries, and private events
        </p>
        <a href="#book-event" class="inline-flex justify-center items-center py-3 px-8 text-primary bg-secondary hover:bg-gray-900 rounded-lg transition-colors duration-300">
          Book Your Event
        </a>
      </div>
    </section>
  </main>
</MainLayout>
